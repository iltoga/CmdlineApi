{
    "openapi": "3.1.0",
    "info": {
        "title": "systemGPT FastAPI Backend",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://52f2-103-100-175-251.ngrok-free.app"
        }
    ],
    "paths": {
        "/execute_command/": {
            "post": {
                "summary": "This endpoint allows systemGPT to execute Linux terminal commands on an Arch Linux environment. It should be used when systemGPT needs to perform system-level tasks or operations directly via the command line.",
                "operationId": "executeCommand",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CommandExecutionRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Command execution result."
                    }
                }
            }
        },
        "/read_file/": {
            "get": {
                "summary": "This endpoint is designed for systemGPT to read and return the contents of a file from the Linux filesystem. It's useful when systemGPT needs to access and process file data.",
                "operationId": "readFile",
                "parameters": [
                    {
                        "name": "file_path",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/FileReadRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "File content."
                    }
                }
            }
        },
        "/save_file/": {
            "post": {
                "summary": "This endpoint enables systemGPT to save content directly to a file on the Linux filesystem. It supports saving both plain text and base64 encoded content. It's particularly useful for persisting data generated by systemGPT.",
                "operationId": "saveFile",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/FileSaveRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Confirmation of file save."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CommandExecutionRequest": {
                "type": "object",
                "properties": {
                    "command": {
                        "type": "string"
                    }
                },
                "required": [
                    "command"
                ]
            },
            "FileReadRequest": {
                "type": "object",
                "properties": {
                    "file_path": {
                        "type": "string"
                    }
                },
                "required": [
                    "file_path"
                ]
            },
            "FileSaveRequest": {
                "type": "object",
                "properties": {
                    "content": {
                        "type": "string"
                    },
                    "file_path": {
                        "type": "string"
                    },
                    "base64_encoded": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "required": [
                    "content",
                    "file_path"
                ]
            }
        }
    }
}